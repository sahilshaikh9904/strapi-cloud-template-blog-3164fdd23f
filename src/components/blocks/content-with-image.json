{
    "collectionName": "components_blocks_content_with_images",
    "info": {
      "displayName": "Content With Image",
      "description": "Content block with title, description, main image, and optional additional image"
    },
    "options": {},
    "attributes": {
      "title": {
        "type": "string",
        "required": true
      },
      "content": {
        "type": "richtext",
        "required": true
      },
      "image": {
        "allowedTypes": ["images"],
        "type": "media",
        "multiple": false
      },
      "imageAlt": {
        "type": "string",
        "required": true
      },
      "layout": {
        "type": "enumeration",
        "enum": ["image-left", "image-right"],
        "default": "image-right"
      },
      "additionalImage": {
        "allowedTypes": ["images"],
        "type": "media",
        "multiple": false
      },
      "additionalImageAlt": {
        "type": "string"
      }
    }
  }